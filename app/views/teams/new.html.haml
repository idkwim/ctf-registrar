.content#letter
  %h1 Create Team
  = form_for @team, url: team_path do |f|
    - if @team.errors.any?
      #error_explanation
        %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
        %ul
          - @team.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :password
      = f.password_field :password
    .field
      = f.label :fun, "Just playing for fun"
      = f.check_box_field :fun
    .actions
      = f.submit 'Save'
      = link_to "Don't save", dashboard_path
